<div class="container d-flex flex-column align-items-center">
  <form action='/' method="GET" class="mt-3">
    <select name="month" onchange="submit()" class="form-control-lg">
      {{#if transferMonth}}<option value="{{transferMonth.value}}">{{transferMonth.name}}</option>{{/if}}
      <option value="">全部月份</option>
      {{#each months}}
      <option value="{{this.value}}">{{this.name}}</option>
      {{/each}}
    </select>
    <select name="category" onchange="submit()" class="form-control-lg">
      {{#if categoryName}}<option>{{categoryName}}</option>{{/if}}
      <option value="">全部類別</option>
      {{#each categorys}}
      <option value="{{this.name}}">{{this.name}}</option>
      {{/each}}
    </select>
  </form>
  <div class="d-flex">
    <h4 class="mt-2">總金額：</h4>
    <h4 class="mt-2 text-warning">{{totalAmount}}</h4>
  </div>
  <div class="row">
    <div class="col-2 mt-2">
      <h5>日期</h5>
    </div>
    <div class="col-2 mt-2">
      <h5>類別</h5>
    </div>
    <div class="col-2 mt-2">
      <h5>項目</h5>
    </div>
    <div class="col-2 mt-2">
      <h5>商家</h5>
    </div>
    <div class="col-2 mt-2">
      <h5 class="text-warning">金額</h5>
    </div>
    <div class="col-2 mt-2">
      <h5 class="text-danger">修改編輯</h5>
    </div>
    {{#each records}}
    <div class="col-2 mt-2">
      <h5>{{{this.date}}}</h5>
    </div>
    <div class="col-2 mt-2">
      <h5>{{{this.icon}}}</h5>
    </div>
    <div class="col-2 mt-2">
      <h5>{{this.name}}</h5>
    </div>
    <div class="col-2 mt-2">
      <h5>{{this.merchant}}</h5>
    </div>
    <div class="col-2 mt-2">
      <h5 class="text-warning">{{this.amount}}</h5>
    </div>
    <div class="col-2 mt-2">
      <a class="btn btn-secondary" href="/expense/{{this._id}}/edit">修改</a>
      <form action="/expense/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
        <button class="btn btn-danger" type="submit">刪除</button>
      </form>
    </div>
    {{/each}}
  </div>
  <a class="btn btn-info mt-3" href="/expense/new">新增支出</a>
</div>
</div>